---
import '../../styles/global.css';
import BandLogo from '../BandLogo.astro';
---

<style>
    .centered-header {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .social-row {
        display: flex;
        gap: 2rem;
        margin-top: 1rem;
    }

    .social-link {
        color: #f3f4f6;
        text-decoration: none;
        font-size: 2rem;
        transition: color 0.2s;
        width: 56px;
        height: 56px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Social Links */
    .social-link img {
        display: block;
        margin: 0 auto;
    }

    /* YouTube */
    .social-link-youtube {
        padding-inline: 4px;
    }

    .yt-logo {
        width: 119px;
        height: 40px;
    }

    .social-link-youtube:hover .yt-logo {
        content: url('/yt_logo_fullcolor_white_digital.png');
    }

    /* Facebook */
    .social-link[href*="facebook.com"]:hover img {
        filter: brightness(0) saturate(100%) invert(34%) sepia(99%) saturate(749%) hue-rotate(183deg) brightness(98%) contrast(92%);
    }

    /* Instagram */
    .social-link:not([href*="facebook.com"]):not(.social-link-youtube):hover img {
        filter: brightness(0) saturate(100%) invert(62%) sepia(92%) saturate(749%) hue-rotate(165deg) brightness(98%) contrast(92%);
    }

    @keyframes fadeOut {
        from { opacity: 0.6; }
        to { opacity: 0; }
    }

    @keyframes floatArrow {
        0% { 
            transform: translateX(-50%) translateY(0);
            opacity: 1;
        }
        50% { 
            transform: translateX(-50%) translateY(15px);
            opacity: 0.8;
        }
        100% { 
            transform: translateX(-50%) translateY(0);
            opacity: 1;
        }
    }

    .scroll-indicator {
        position: fixed;
        bottom: 32px;
        left: 50%;
        transform: translateX(-50%);
        color: white;
        font-size: 2.5rem;
        line-height: 1;
        animation: floatArrow 1.5s ease-in-out infinite;
        opacity: 0.9;
        pointer-events: none;
        z-index: 1000;
        text-shadow: 0 2px 8px rgba(0,0,0,0.3);
        filter: drop-shadow(0 4px 6px rgba(0,0,0,0.3));
    }

    .scroll-indicator::before {
        content: 'SCROLL';
        position: absolute;
        left: 50%;
        bottom: 100%;
        transform: translateX(-50%);
        font-size: 0.8rem;
        letter-spacing: 0.1em;
        margin-bottom: 4px;
        font-weight: 500;
        opacity: 0.9;
    }

    .scroll-indicator::after {
        content: '▼';
        position: absolute;
        left: 50%;
        top: -8px;
        transform: translateX(-50%);
        opacity: 0.4;
        font-size: 1.8rem;
    }

    .scroll-indicator.fade-out {
        animation: fadeOut 0.8s ease-out forwards;
    }



    .ig-gradient-wrap {
        display: inline-block;
        position: relative;
        width: 32px;
        height: 32px;
    }

    .ig-gradient-wrap::after {
        content: '';
        position: absolute;
        left: 0; top: 0; width: 100%; height: 100%;
        pointer-events: none;
        opacity: 0;
        z-index: 2;
        border-radius: 8px;
        background: radial-gradient(circle at 30% 110%, #fdf497 0%, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%);
        mix-blend-mode: screen;
        transition: opacity 0.2s;
    }

    .social-link[href*="instagram.com"]:hover .ig-gradient-wrap::after {
        opacity: 1;
    }
</style>
<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
    const scrollIndicator = document.querySelector('.scroll-indicator');
    
    // Hide scroll indicator when user starts scrolling
    window.addEventListener('scroll', () => {
        if (scrollIndicator && !scrollIndicator.classList.contains('fade-out')) {
            // Add the fade-out class to trigger the animation
            scrollIndicator.classList.add('fade-out');
            
            // Listen for the animation end and remove the element
            scrollIndicator.addEventListener('animationend', () => {
                scrollIndicator.remove();
            }, { once: true });
        }
    }, { passive: true });
});
</script>

<div class="centered-header">
    <BandLogo />
    <div class="scroll-indicator">▼</div>
    <div class="social-row">
        <a class="social-link" href="https://www.facebook.com/dinvaatedrom" target="_blank" rel="noopener" aria-label="Facebook">
            <img src="/Facebook_Logo_Secondary.png" alt="Facebook" width="32" height="32" />
        </a>
        <a class="social-link social-link-youtube" href="https://www.youtube.com/@dinvatedrom" target="_blank" rel="noopener" aria-label="YouTube">
            <img src="/yt_logo_white_digital.png" alt="YouTube" class="yt-logo" />
        </a>
        <a class="social-link" href="https://www.instagram.com/dinvatedrom/" target="_blank" rel="noopener" aria-label="Instagram">
            <span class="ig-gradient-wrap">
                <img src="/Instagram_Glyph_White.png" alt="Instagram" width="32" height="32" />
            </span>
        </a>
    </div>
</div>