<style>
    /* CSS Custom Properties for consistent values */
    :root {
        --social-icon-size: 32px;
        --social-link-size: 56px;
        --hover-transition: 0.2s;
        --spacing-gap: 2rem;
    }

    /* Base Styles */
    .social-row {
        display: flex;
        gap: var(--spacing-gap);
        margin-top: 1rem;
    }

    .social-link {
        color: #f3f4f6;
        text-decoration: none;
        width: var(--social-link-size);
        height: var(--social-link-size);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform var(--hover-transition);
    }

    .social-link img {
        display: block;
        margin: 0 auto;
    }

    /* Social Media Specific Styles */
    /* YouTube */
    .social-link-youtube {
        padding-inline: 4px;
    }

    .yt-logo {
        width: 119px;
        height: 40px;
        transition: content var(--hover-transition);
    }

    .social-link-youtube:hover .yt-logo {
        content: url('/yt_logo_fullcolor_white_digital.png');
    }

    /* Facebook */
    .social-link[href*="facebook.com"] img {
        width: var(--social-icon-size);
        height: var(--social-icon-size);
        transition: filter var(--hover-transition);
    }

    .social-link[href*="facebook.com"]:hover img {
        filter: brightness(0) saturate(100%) invert(34%) sepia(99%) saturate(749%) hue-rotate(183deg) brightness(98%) contrast(92%);
    }

    /* Instagram */
    .ig-gradient-wrap {
        display: inline-block;
        position: relative;
        width: var(--social-icon-size);
        height: var(--social-icon-size);
    }

    .ig-gradient-wrap::after {
        content: '';
        position: absolute;
        inset: 0;
        pointer-events: none;
        opacity: 0;
        z-index: 2;
        border-radius: 8px;
        background: radial-gradient(
            circle at 30% 110%,
            #fdf497 0%,
            #fdf497 5%,
            #fd5949 45%,
            #d6249f 60%,
            #285AEB 90%
        );
        mix-blend-mode: screen;
        transition: opacity var(--hover-transition);
    }

    .social-link[href*="instagram.com"]:hover .ig-gradient-wrap::after {
        opacity: 1;
    }
</style>

<div class="social-row">
    <a class="social-link" href="https://www.facebook.com/dinvaatedrom" target="_blank" rel="noopener" aria-label="Facebook">
        <img src="/Facebook_Logo_Secondary.png" alt="Facebook" width="32" height="32" />
    </a>
    <a class="social-link social-link-youtube" href="https://www.youtube.com/@dinvatedrom" target="_blank" rel="noopener" aria-label="YouTube">
        <img src="/yt_logo_white_digital.png" alt="YouTube" class="yt-logo" />
    </a>
    <a class="social-link" href="https://www.instagram.com/dinvatedrom/" target="_blank" rel="noopener" aria-label="Instagram">
        <span class="ig-gradient-wrap">
            <img src="/Instagram_Glyph_White.png" alt="Instagram" width="32" height="32" />
        </span>
    </a>
</div>